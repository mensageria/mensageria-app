<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_lista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/descricao_foto"
        android:padding="@dimen/padding"
        android:src="@drawable/ic_account_circle_black_48dp" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/foto"
        android:layout_toLeftOf="@+id/data"
        android:layout_toRightOf="@+id/foto"
        android:layout_toStartOf="@id/data"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="titulo da conversa"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texto_medio" />


    <TextView
        android:id="@+id/nome_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/foto"
        android:layout_toLeftOf="@+id/data"
        android:layout_toRightOf="@+id/foto"
        android:layout_toStartOf="@id/data"
        android:layout_below="@+id/titulo"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="nome do autor" />

    <TextView
        android:id="@+id/conteudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/foto"
        android:layout_toLeftOf="@+id/data"
        android:layout_toRightOf="@+id/foto"
        android:layout_toStartOf="@id/data"
        android:layout_below="@+id/nome_autor"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Conteudo da mensagem"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding"
        tools:text="12/12/1212" />

</RelativeLayout>